<div class="col-lg-6 mt-5 mb-5">
    <div class="p-2 col-title mx-auto">
        <h5 class="text-brown text-center"><%= jurusanData.nama %></h5>
    </div>
    <div class="d-flex flex-row box-white mt-5">
        <div class="p-1">
            <img src="/assets/images/icon/26. icon search.png" style="width:100px;">
        </div>
        <div class="col p-3">
            <h5 class="text-white">Cari tahu informasi tentang jurusan dan<br> kampus tujuanmu!</h5>
        </div>
    </div>
    <div class="container box-white mt-5">
        <div class="row m-5 tab-pane fade show active" id="nav-profile" role="tabpanel">
            <div class="col-lg-12">
                <span class="text-warning">Deskripsi</span><br>
                <span class="text-white"><%= jurusanData.deskripsi %></span><br>
            </div>
            <div class="col-lg-12 mt-3">
                <span class="text-warning">Prosespek Kerja</span><br>
                <span class="text-white"><%= jurusanData.prospek_kerja %></span>
            </div>
            <div class="col-lg-12 mt-3">
                <span class="text-warning">Perminatan</span><br>
                <span class="text-white"><%= jurusanData.perminatan %></span>
            </div>
            <div class="col-lg-12 mt-3">
                <span class="text-warning">Jumlah Peminat Tahun Sebelumnya</span><br>
                <span class="text-white"><%= new Intl.NumberFormat().format(jurusanData.jumlah_peminat) %> orang</span>
            </div>
            <div class="col-lg-12 mt-3">
                <span class="text-warning">Kampus Rekomendasi</span><br>
            </div>
            <div class="col-lg-12 mt-3 d-flex flex-row">
                <div class="p-1">
                    <!-- <img width="40px" src="/assets/images/icon/27. logo univers polos.png"> -->
                </div>
                <div class="col">
                    <% if (jurusanData.universitas_rekomendasi.length > 0) { %>
                        <% jurusanData.universitas_rekomendasi.forEach(data => { %>
                            <span class="text-white"><%= data.nama %></span><br>
                        <% }) %>
                    <% } else { %>
                            <span class="text-white">Tidak ada data</span>
                    <% } %>
                </div>
            </div>
