<div class="col-lg-6 mt-5 mb-5">
    <div class="p-2 col-title mx-auto">
        <h5 class="text-brown text-center">INFO KAMPUS</h5>
    </div>
    <div class="d-flex flex-row box-white mt-5">
        <div class="p-1">
            <img src="/assets/images/icon/26. icon search.png" style="width:100px;">
        </div>
        <div class="col p-3">
            <h5 class="text-white">Cari tahu informasi tentang jurusan dan<br> kampus tujuanmu!</h5>
        </div>
    </div>
    <div class="container box-white mt-5">
        <div class="row m-5">
            <div class="col-lg-12">
                <div class="d-flex flex-row w-100">
                    <div class="p-1 div-logo">
                        <img width="80px" src="<%= universitasData.logo %>">
                    </div>
                    <div class="col">
                        <h4 class="text-warning text-bold"><%= universitasData.nama %></h4>
                        <div class="d-flex flex-row">
                            <div class="p-1">
                                <img width="15px" src="/assets/images/icon/29. akreditasi.png">
                            </div>
                            <div class="col">
                                <h4 class="text-warning">AKREDITASI <%= universitasData.akreditasi %></h4>
                            </div>
                        </div>  
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mt-2">
                <span class="text-warning"><%= universitasData.jenis %></span>
            </div>
        </div>
        <div class="card-menu d-flex flex-column text-center justify-content-start">
            <div class="m-0">
                <img width="30px" src="/assets/images/icon/29. profil on.png">
                <a class="text-white text-small" style="cursor: pointer;" id="nav-profile-tab">
                    Profil
                </a>
            </div>
            <div class="m-0">
                <img width="30px" src="/assets/images/icon/29. jurusan on.png">
                <a class="text-white text-small" style="cursor: pointer;" id="nav-jurusan-tab">
                Jurusan
                </a>
            </div>
        </div>
        <div class="tab-content">
            <div class="row m-5 fade show active" id="navProfile">
                <div class="col-lg-3">
                    <h5 class="text-warning">Lokasi</h5>
                    <span class="text-white"><%= universitasData.lokasi %></span>
                </div>
                <div class="col-lg-12 mt-3">
                    <h5 class="text-warning">Website</h5>
                    <span class="text-white">
                        <a class="text-white" href="<%= universitasData.website %>" target="_blank">
                        <%= universitasData.website %>
                    </a>
                    </span>
                </div>
                <div class="col-lg-12 mt-3">
                    <h5 class="text-warning">Rank Nasional / Internasional</h5>
                    <span class="text-white"><%= universitasData.rank_nasional %> / <%= universitasData.rank_internasional %></span>
                </div>
                <div class="col-lg-12 mt-3">
                    <h5 class="text-warning">Jumlah Peminat Tahun Sebelumnya</h5>
                    <span class="text-white"><%= universitasData.jumlah_peminat %></span>
                </div>
                <div class="col-lg-12 mt-3">
                    <h5 class="text-warning">Biaya Pendidikan</h5>
                    <span class="text-white">Biaya semester minimal Rp. <%= new Intl.NumberFormat().format(universitasData.biaya) %></span>
                </div>
                <div class="col-lg-12 mt-3">
                    <h5 class="text-warning">Jalur Masuk</h5>
                    <% universitasData.jalur_masuk.map(data => { %>
                        <img width="35px" src="/assets/images/icon/29. icon jalur masuk.png">
                        <span class="text-white"><%= data %></span><br>
                    <% }) %>
                </div>
            </div>
       
            <div class="row m-3 fade d-flex flex-row d-none" id="navJurusan">
                <% if (universitasData.jurusan.length > 0) { %>
                    <% universitasData.jurusan.forEach(data => { %>
                        <div class="col-lg-2">
                            <img width="40px" src="/assets/images/icon/27. logo univers polos.png">
                        </div>
                        <div class="col-lg-10">
                            <span class="text-white"><%= data.nama %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-lg-12 text-center">
                        <span class="text-white text-center">Tidak ada data</span>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>