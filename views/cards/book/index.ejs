<div class="col-lg-12 mt-5 mb-5">
    <div class="p-2 col-title mx-auto">
        <h5 class="text-brown text-center">BUKU</h5>
    </div>
    <div class="container box-white mt-5 text-center" id="showBook">
        <div class="row mt-3">
            <div class="col-lg-6">
                <h5 class="text-brown text-left">PAKET BUKU</h5>
            </div>
            <div class="col-lg-6">
                <a data-toggle="collapse" data-target="#detailBook" href="#" class="nav-link text-white p-1" style="float: right;">Lihat</a>
            </div>
        </div>
        <% if (bukuData != undefined && bukuData != null) { %>
        <div id="detailBook" class="row">
            <% let counter = 1 %>
            <% bukuData.forEach(data => { %>
                <div class="col-lg-3 mb-2">
                    <a type="button" class="nav-link openDetailBook" data-id="<%= data._id %>"
                        data-name="<%= data.nama %>" data-creator="<%= data.penulis %>" data-size="<%= data.ukuran %>"
                        data-thick="<%= data.tebal %>" data-heavy="<%= data.berat %>" data-isbn="<%= data.isbn %>"
                        data-penerbit="<%= data.penerbit %>" data-detail="<%= data.keterangan %>"
                        data-price="<%= data.harga %>">
                        <img class="img-book" src="<%= data.gambar %>">
                        <p></p>
                        <span class="text-white"><%= data.nama %></span><br>
                        <span class="text-brown"><%= new Intl.NumberFormat("id-ID", { style: "currency", currency: "IDR" }).format(data.harga) %></span><br>
                    </a>
                    <button type="button" class="btn btn-brown text-bold openOrderBook" data-id="<%= data._id %>"
                        data-name="<%= data.nama %>" data-creator="<%= data.penulis %>" data-size="<%= data.ukuran %>"
                        data-thick="<%= data.tebal %>" data-heavy="<%= data.berat %>" data-isbn="<%= data.isbn %>"
                        data-penerbit="<%= data.penerbit %>" data-detail="<%= data.keterangan %>"
                        data-price="<%= data.harga %>">Beli</button>
                </div>
            <% counter++ %>
            <% }) %>
        </div>
        <% } %>
