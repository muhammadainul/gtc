<div class="col-lg-12 mt-5 mb-5">
    <div class="p-2 col-title mx-auto">
        <h5 class="text-brown text-center">NOTIFIKASI</h5>
    </div>
    <% if (result.length > 0) { %>
        <div class="container mt-5">
            <div class="row m-5">
                <div class="col-lg-12">
                    <table style="width: 100%;" class="table text-white table-borderless table-hover table-striped" id="tableNotif">
                        <thead>
                            <tr>
                                <th>Icon</th>
                                <th>Notif</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% result.forEach(data => { %>
                                <tr>    
                                    <td class="col-logo">
                                        <% if (data.read == false) { %>
                                            <i class="fa fa-envelope text-warning fa-2x" 
                                            data-toggle='tooltip' data-placement='top' title='Belum dibaca'></i>
                                        <% } else { %>
                                            <i class="fa fa-envelope-open-text text-white fa-2x" 
                                            data-toggle='tooltip' data-placement='top' title='Sudah dibaca'></i>
                                        <% } %>
                                    </td>
                                    <td class="text-warning">
                                        <a class="<% if (data.read == false) { %> text-warning <% } else { %> text-white <% } %> readNotif"
                                            type="button" data-id="<%= data._id %>" 
                                            data-title="<%= data.judul %>" data-content="<%= data.isi %>" 
                                            data-date="<%= data.created %>">
                                            <%= data.judul %>
                                        </a>
                                    </td>
                                    <td>
                                        <a><i class="fa fa-window-close text-white"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="container mt-5">
            <div class="row m-5">
                <div class="col-lg-12 text-center">
                    <img src="/assets/images/icon/Dokumen dari 08_Aullia Yahya.png">
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('../../modals/notifikasi/index') %>