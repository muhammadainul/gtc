<div class="col-lg-12 mt-5 mb-5">
    <div class="p-2 col-title-shop mx-auto" id="beritaTitle">
        <h5 class="text-dark text-center"><%= result.judul %></h5>
    </div>
    <div class="container mt-5" id="homeContent">
        <div class="d-flex flex-row justify-content-between large-content" id="mediumContent">
            <div class="col-lg-3" id="cardContent">
                <div class="card">
                    <% let content = result.konten %>
                    <div class="badge
                    <% if (result.tipe == "EVENT") { %> bg-danger 
                        <% } else if (result.tipe == "E-SPORTS") { %> bg-primary 
                        <% } else if (result.tipe == "PROMO") { %> bg-purple
                        <% } else if (result.tipe == "PATCH") { %> bg-warning 
                        <% } else { %> bg-info <% } %>
                        text-white position-absolute">
                        <span><%= result.tipe %></span>
                    </div>
                    <div class="card-image">
                        <img class="img-carousel w-100 h-100" src="<%= result.thumbnail %>" alt="..." />
                    </div>
                    <div class="card-body">
                        <div class="small text-uppercase fw-bold text-muted">Free</div>
                        <div class="mb-3">
                            <span class="fw-bold"><%= result.judul %></span>
                        </div>
                        <div class="content">
                            <span class="text-muted text-small">
                                <%= content.substring(0, 50) %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
