<div class="text-center mb-5">
    <!-- <h2 class="fw-bolder">Pay as you grow</h2>
    <p class="lead mb-0">With our no hassle pricing plans</p> -->
</div>
<div class="row mx-auto my-auto justify-content-center">
    <div id="carouselBerita" class="carousel carousel2 slide" data-bs-ride="carousel2">
        <div class="carousel-inner-group" role="listbox">
            <% if (beritaData != undefined && beritaData != null) { %>
                <% var counter = 1 %>
                <% beritaData.forEach(data => { %>
                    <% let content = data.konten %>
                    <div class="carousel-item <% if (counter <= 1) { %> active <% } %>">
                        <div class="col-md-3">
                            <a href="/berita/<%= data._id %>" style="text-decoration: none">
                            <div class="card">
                                <!-- Promo badge-->
                                <div class="badge 
                                    <% if (data.tipe == "EVENT") { %> bg-danger 
                                    <% } else if (data.tipe == "E-SPORTS") { %> bg-primary 
                                    <% } else if (data.tipe == "PROMO") { %> bg-purple
                                    <% } else if (data.tipe == "PATCH") { %> bg-warning 
                                    <% } else { %> bg-info <% } %>
                                    badge-card text-white position-absolute">
                                    <span><%= data.tipe %></span>
                                </div>
                                <div class="card-image bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                    <img class="img-carousel w-100 h-100" src="<%= data.thumbnail %>" alt="..." />
                                </div>
                                <div class="card-body">
                                    <div class="small text-uppercase fw-bold text-muted">Free</div>
                                    <div class="mb-3">
                                        <span class="fw-bold"><%= data.judul %></span>
                                    </div>
                                    <div class="content">
                                        <span class="text-muted">
                                            <%= content.substr(0, 50) %>....
                                        </span>
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <!-- <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                                </div> -->
                            </div>
                            </a>
                        </div>
                    </div>
                    <% counter++ %>
                <% }) %>
            <% } %>
        </div>
        <a class="carousel-control-prev bg-transparent w-aut" href="#carouselBerita" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next bg-transparent w-aut" href="#carouselBerita" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
</div>